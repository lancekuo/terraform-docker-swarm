{
  "builders": [
    {
      "ami_name": "docker {{timestamp}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "instance_type": "t2.small",
      "region": "ca-central-1",
      "source_ami_filter": {
        "filters": {
          "name": "*ubuntu-yakkety-16.10-amd64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true
      },
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "16.10",
        "Docker_Version": "ce_17.05.0",
        "Docker_Url" : "https://download.docker.com/linux/ubuntu/dists/xenial/pool/edge/amd64/docker-ce_17.04.0~ce-0~ubuntu-xenial_amd64.deb",
        "AWSCLI_Version": "1.11.89",
        "Build_Date": "{{isotime \"2006-01-02 03:04:05 -0700\"}}"
      },
      "type": "amazon-ebs",
      "security_group_ids": ["sg-d94ea7b0"],
      "ssh_username": "ubuntu",
      "subnet_id": "subnet-0337d56a"
    }
  ],
  "post-processors": null,
  "provisioners": [
    {
      "destination": "/tmp/custom.conf",
      "source": "docker.options",
      "type": "file"
    },
    {
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "sudo mkdir /etc/systemd/system/docker.service.d && sudo mv /tmp/custom.conf /etc/systemd/system/docker.service.d/",
        "apt-get -y update",
        "apt-get -y install unzip libltdl7",
        "sudo ln -s /usr/bin/python3 /usr/bin/python",
        "curl 'https://s3.amazonaws.com/aws-cli/awscli-bundle.zip' -o 'awscli-bundle.zip';unzip awscli-bundle.zip;./awscli-bundle/install -b ~/bin/aws",
        "curl https://download.docker.com/linux/ubuntu/dists/xenial/pool/edge/amd64/docker-ce_17.05.0~ce-0~ubuntu-xenial_amd64.deb -o package.deb;sudo dpkg -i package.deb",
        "usermod -aG docker ubuntu",
        "rm -rf awscli-bundle.zip package.deb"
      ],
      "type": "shell"
    }
  ]
}
